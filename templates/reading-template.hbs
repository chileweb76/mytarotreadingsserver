<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Tarot Reading - {{date}}</title>
  <style>
    body { font-family: Arial, Helvetica, sans-serif; color: #111; padding: 20px; }
    h1 { text-align: center; color: #4a154b; }
    .meta { margin-bottom: 12px; }
    .section { margin-bottom: 18px; }
    .card-item { margin-bottom: 8px; padding: 10px; border: 1px solid #ddd; border-radius: 6px; }
    .card-title { font-weight: 600; }
    .footer-note { margin-top: 28px; color: #555; font-size: 0.9rem; }
    @media print {
      body { margin: 0; }
    }
  </style>
</head>
<body>
  <h1>Tarot Reading</h1>
  <div class="meta">
    {{#if image}}
      <div style="margin-bottom:12px"><img src="{{image}}" style="max-width:200px;max-height:160px;border-radius:6px;" alt="Reading image"/></div>
    {{/if}}
    <div><strong>Reading by:</strong> {{by}}</div>
    <div><strong>Date:</strong> {{date}}</div>
    <div><strong>Querent:</strong> {{querent}}</div>
    <div><strong>Spread:</strong> {{spread}}</div>
    <div><strong>Deck:</strong> {{deck}}</div>
  </div>

  <div class="section">
    <h3>Question</h3>
    <div>{{question}}</div>
  </div>

  <div class="section">
    <h3>Cards Drawn</h3>
    {{#each cards}}
      <div class="card-item">
        <div style="display:flex;gap:12px;align-items:flex-start;">
          {{#if this.image}}
            <div style="flex:0 0 120px;">
              <img src="{{this.image}}" style="max-width:120px;max-height:160px;border-radius:6px;" alt="{{this.title}}" />
            </div>
          {{/if}}
          <div style="flex:1;">
            <div class="card-title">{{this.title}}{{#if this.card}}{{#if this.suit}} — {{this.card}} of {{this.suit}}{{else}} — {{this.card}}{{/if}}{{/if}}{{#if this.reversed}} (reversed){{/if}}</div>
            {{#if this.interpretation}}
              <div class="card-interpretation">{{this.interpretation}}</div>
            {{/if}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <div class="section">
    <h3>Interpretation</h3>
    <div>{{interpretation}}</div>
  </div>

  {{#if outcome}}
    <div class="section">
      <h3>Outcome</h3>
      <div>{{outcome}}</div>
    </div>
  {{/if}}

  <div class="footer-note">Exported: {{exportedAt}}</div>
</body>
</html>