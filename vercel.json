{
  "rewrites": [
    { "source": "/api/decks/:path*", "destination": "/api" },
    { "source": "/api/spreads/:path*", "destination": "/api/spreads" },
    { "source": "/api/readings/user", "destination": "/api/readings" },
    { "source": "/api/readings/auth/check", "destination": "/api/readings" },
    { "source": "/auth/:path*", "destination": "/api/auth/:path*" },
    { "source": "/auth", "destination": "/api/auth" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://mytarotreadings.vercel.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS, PATCH" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, x-user-id, X-Requested-With, Accept, Origin, x-vercel-blob-store, x-reading-id, Cache-Control, Pragma" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Expose-Headers", "value": "Content-Length, X-Request-Id" },
        { "key": "Access-Control-Max-Age", "value": "86400" }
      ]
    }
  ]
}
